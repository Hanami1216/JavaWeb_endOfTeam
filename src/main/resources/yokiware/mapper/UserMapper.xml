<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="yokiware.mapper.UserMapper">
    <insert id="addUser">
        insert into user(id, name, sex, age, address, power, password)
        values (#{id}, #{name}, #{sex}, #{age}, #{address}, #{power}, #{password})
    </insert>
    <update id="modifyById">
        update
        user
        <set>
            <if test="name!= null and name != ''">
                name =#{name}
            </if>
        </set>
        <if test="name!= null and name != ''">
            name =#{name}
        </if>
        <if test="name!= null and name != ''">
            name =#{name}
        </if>
    </update>
    <delete id="delById">
        delete
        from user
        where id = #{id};
    </delete>


    <select id="findAll" resultType="yokiware.entity.User">
        select *
        from user;
    </select>
    <select id="getById" resultType="yokiware.entity.User">
        select *
        from user
        where id = #{id};
    </select>


</mapper>
<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="yokiware.mapper.OderMapper">
    <insert id="addUser">
        insert into oder(content, update_time, telephone_number, Payment_method, uid)
        values (#{content}, #{update_time}, #{telephone_number}, #{Payment_method}, #{uid})
    </insert>
    <update id="modifyById">
        update
        user
        <set>
            <if test="content!= null and content != ''">
                content =#{content},
            </if>
            <if test="update_time!= null and update_time != ''">
                update_time =#{update_time},
            </if>
            <if test="telephone_number!= null and telephone_number != ''">
                telephone_number =#{telephone_number},
            </if>
            <if test="Payment_method!= null and Payment_method != ''">
                Payment_method =#{Payment_method},
            </if>
            <if test="uid!= null and uid != ''">
                uid =#{uid},
            </if>
        </set>
        where id =#{id}
    </update>
    <delete id="delById">
        delete
        from oder
        where id = #{id};
    </delete>


    <select id="findAll" resultType="yokiware.entity.User">
        select *
        from oder;
    </select>
    <select id="getById" resultType="yokiware.entity.User">
        select *
        from oder
        where id = #{id};
    </select>


</mapper>